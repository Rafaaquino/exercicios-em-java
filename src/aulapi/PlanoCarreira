
package aulapi;

import java.util.Scanner;

/**
 *
 * @author rafael.eraquino
 */
public class PlanoCarreira {
    public static void main(String[]args){
        
        Scanner leitor = new Scanner(System.in);
        
        String nome, nivel;
        double Salario, hora, valor;
        
        
        System.out.print("Digite seu nome: ");
        nome = leitor.nextLine();
        
        System.out.print("Digite seu nivel: ");
        nivel = leitor.next();
               
        System.out.print("Digite a quantidade de horas trabalhadas: ");
        hora = leitor.nextDouble();
        
            
        
        switch(nivel){
            case "1":
                
                valor = 15;

                Salario = valor*hora;
                System.out.printf("O funcionário %s  trabalhou %.2f Horas e o Valor da Hora é %.2f , o nivel dele é 1 \n e deve receber R$ %.2f\n", nome, hora, valor, Salario );
            break;
            
            case "2":
                
                valor = 18;

                Salario = valor*hora;
                System.out.printf("O funcionário %s  trabalhou %.2f Horas e o Valor da Hora é %.2f , o nivel dele é 2 \n e deve receber R$ %.2f\n", nome, hora, valor, Salario );
            break;
            
            case "3":
                
                valor = 22;

                Salario = valor*hora;
                System.out.printf("O funcionário %s  trabalhou %.2f Horas e o Valor da Hora é %.2f , o nivel dele é 3 \n e deve receber R$ %.2f\n", nome, hora, valor, Salario );
            break;
            
            case "4":
                
                valor = 27;

                Salario = valor*hora;
                System.out.printf("O funcionário %s  trabalhou %.2f Horas e o Valor da Hora é %.2f , o nivel dele é 4 \n e deve receber R$ %.2f\n", nome, hora, valor, Salario );
            break;
            
            case "5":
                
                valor = 33;

                Salario = valor*hora;
                System.out.printf("O funcionário %s  trabalhou %.2f Horas e o Valor da Hora é %.2f , o nivel dele é 5 \n e deve receber R$ %.2f\n", nome, hora, valor, Salario );
            break;
            
        }
        
        
        
        
        
    }
}
